.contents
  .contents-header
    .contents-header__title 温泉APP
    .contents-header__registration
      - if user_signed_in?
        .login
          = link_to "ログアウト",destroy_user_session_path, method: :delete,class: 'signup'
          = link_to "投稿する", new_review_path,class: 'signup'
      - else
        .logout
          = link_to "ログイン", new_user_session_path, class: 'signup'
          = link_to "新規登録", new_user_registration_path, class: 'signup'
  .contents-photo
    = image_tag "header.jpg",width:"100%",height:"500px"
  .contents-main
    .contents-main__text
      新着投稿
    .contents-main__list
      - @review.each do |review|
        .contents-main__list__review
          = link_to review_path(review) do
            = review.title
            = image_tag "#{review.photos[0].image}",width:"200px",height:"250px"
    .contents-main__bottom
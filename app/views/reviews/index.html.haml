.contents
  .contents-header
    .contents-header__title 
      = link_to root_path do
        温泉APP
    .contents-header__registration
      - if user_signed_in?
        .login
          = link_to "ログアウト",destroy_user_session_path, method: :delete,class: 'signup'
          = link_to "投稿する", new_review_path,class: 'signup'
      - else
        .login
          = link_to "ログイン", new_user_session_path, class: 'signup'
          = link_to "新規登録", new_user_registration_path, class: 'signup'
.contents-photo
  = image_tag "header.jpg",width:"100%",height:"500px"
.contents-main
  .contents-main__text

.registration
  .registration__signup
    .registration__signup__title
      %h2 新規登録
    .registration__signup__list
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.text_field :nickname,placeholder: "ニックネーム",class:"user-list"
          = fa_icon "user",class:"user-icon"
        .field
          
          = f.file_field :icon
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス",class:"user-list"
          = fa_icon "envelope",class:"user-icon"
        .field
          -# - if @minimum_password_length
          -#   %em
          -#     (#{@minimum_password_length} characters minimum)
          = f.password_field :password, autocomplete: "new-password",placeholder: "パスワード",class:"user-list"
          = fa_icon "key",class:"user-icon"
        .field
          = f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "パスワード(確認用)",class:"user-list"
          = fa_icon "key",class:"user-icon"
        .actions
          = f.submit "新規登録",class:"button"
  .registration__path
    %h3 アカウントをお持ちですか？
    = link_to "ログインする" , new_user_session_path ,class:"path"

%main
  .registration
    .registration__signup
      .registration__signup__title
        %h2 ログイン
      .registration__signup__list
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .form
            %label メールアドレス
            .field
              = f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス",class:"user-list"
              = fa_icon "envelope",class:"user-icon"
          .form
            %label パスワード
            .field
              = f.password_field :password, autocomplete: "current-password",placeholder: "パスワード",class:"user-list"
              = fa_icon "key",class:"user-icon"
          -# - if devise_mapping.rememberable?
          -#   .field
          -#     = f.check_box :remember_me
          -#     = f.label :remember_me
          .actions
            = f.submit "ログイン",class:"button"
    .registration__user
      .registration__user__test 
        テストユーザー
      .registration__user__mail
        メールアドレス  
        %span test@test
      .registration__user__password
        パスワード  
        %span 123456
    .registration__path
      %h3 アカウントをお持ちでないですか？
      = link_to "新規登録" ,  new_user_registration_path ,class:"path"
